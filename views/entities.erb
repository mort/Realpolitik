<h1>Entidades</h1>


<form action="/entities/mass_delete" method="post">
	<p>
		<input type="submit" value="Borrar">
	</p>
	
<table>
	<th>
		&nbsp;
	</th>
	<th>
		Nombre
	</th>
	<th>
		Hechos conocidos
	</th>
	<th>
		Hechos relacionados
	</th>
	<th>
		Noticias
	</th>
	
<% @entities.each do |e| %>
<tr>

</tr>
<tr>
	<td><input type="checkbox" name="ids[]" value="<%= e.id %>"></td>
	<td><a href="/entities/<%= e.id %>"><%= e.text %></a></td>
	<td><a href="/entities/<%= e.id %>#subject"><%= e.as_subject.count %></a></td>
	<td><a href="/entities/<%= e.id %>#predicate"><%= e.as_predicate.count %></td>
	<td><a href="/entities/<%= e.id %>#stories"><%= e.stories.count %></td>

</tr>
<% end %>	
</table>
<p>
	<input type="submit" value="Borrar">
</p>
</form>
